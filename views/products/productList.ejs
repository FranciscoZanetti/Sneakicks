    <title>products | Sneakicks</title>
</head>




<body>
    
    <%- include('../partials/header'); %>

    <main>

        <div class="container">

            <p class="directory">> Home > Disponibles</p>

            <% if (session.category == 'admin') { %>
                <div class="add-container">
                    <a class="add" href="/products/create">
                        <p class="add-text">AÃ±adir producto</p>
                        <i class="fa-solid fa-plus"></i>
                    </a>
                </div>
            <% } %>


            <% if (results){ %>
                <% if (results.avaiable){ %>
                    <section class="recomended">
                        <h3>Disponibles</h3>
                        <div class="preview-container">
                            <% for( let product of results.avaiable ) { %> 
                            <div class="preview-container_item">
                                <a href="/products/<%= product.id %>">
                                    <div class="preview_image">
                                        <img src="/img/products/<%= product.main_picture %>" alt="" class="preview">
                                    </div>
                                    <div class="preview_content">
                                        <h3 class="half-margin"><%= product.brand.name %></h3>
                                        <p class="half-margin"><%= product.whole_name %></p>
                                        <p class="half-margin price"><%= product.price_final %></p>
                                    </div>
                                </a>
                            </div>
                            <% } %>
                        </div>
                    </section>
                <% } %>
    
                <% if (results.unavaiable){ %>
