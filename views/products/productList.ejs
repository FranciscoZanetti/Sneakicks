<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/productList.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <script src="https://kit.fontawesome.com/f7b22d2da3.js" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Roboto&display=swap" rel="stylesheet">
    <title>products | Sneakicks</title>
</head>




<body>
    
    <%- include('../partials/header'); %>

    <main>

        <div class="container">

            <p class="directory">> Home > Disponibles</p>
            
            <section class="recomended">
                <h3>DISPONIBLES</h3>
                <div class="preview-container">
                    <% for( let product of products ) { %> 
                    <div class="preview-container_item">
                        <a href="/products/<%= product.id %>">
                            <div class="preview_image">
                                <img src="/img/products/<%= product.main_picture %>" alt="" class="preview">
                            </div>
                            <div class="preview_content">
                                <h3 class="half-margin"><%= product.brand_name %></h3>
                                <p class="half-margin"><%= product.whole_name %></p>
                                <p class="half-margin price"><%= product.price_final %></p>
                            </div>
                        </a>
                    </div>
                    <% } %>
                </div>
            </section>

            <section>
                <article class="details-text">

                    <h3>Guía de talles</h3>

                    <form class="size-unit-form" action="/productDetail" method="get">

                        <article class="size-unit-container">
                            <div class="size-unit">
                                <label for="estadosunidos">Estados Unidos:</label>
                                <select name="estadosunidos" id="estadosunidos">
                                    <option value="7">7</option>
                                    <option value="7.5">7.5</option>
                                    <option value="8">8</option>
                                    <option value="8.5">8.5</option>
                                    <option value="9">9</option>
                                    <option value="9.5">9.5</option>
                                    <option value="10">10</option>
                                    <option value="10.5">10.5</option>
                                    <option value="11">11</option>
                                    <option value="11.5">11.5</option>
                                    <option value="12">12</option>
                                </select>
                                <span class="custom-arrow-size-unit"></span>
                            </div>
                        </article>

                        <article class="size-unit-container">
                            <div class="size-unit">
                                <label for="europa">Europa:</label>
                                <select name="europa" id="europa">
                                    <option value="40">40</option>
                                    <option value="40.5">40.5</option>
                                    <option value="41">41</option>
                                    <option value="41.5">41.5</option>
                                    <option value="42">42</option>
                                    <option value="42.5">42.5</option>
                                    <option value="43">43</option>
                                    <option value="43.5">43.5</option>
                                    <option value="44">44</option>
                                    <option value="44.5">44.5</option>
                                    <option value="45">45</option>
                                </select>
                                <span class="custom-arrow-size-unit"></span>
                            </div>
                        </article>

                        <article class="size-unit-container">
                            <div class="size-unit">
                                <label for="centimetros">Centímetros:</label>
                                <select name="centimetros" id="centimetros">
                                    <option value="25">25</option>
                                    <option value="25.5">25.5</option>
                                    <option value="26">26</option>
                                    <option value="26.5">26.5</option>
                                    <option value="27">27</option>
                                    <option value="27.5">27.5</option>
                                    <option value="28">28</option>
                                    <option value="28.5">28.5</option>
                                    <option value="29">29</option>
                                    <option value="29.5">29.5</option>
                                    <option value="30">30</option>
                                </select>
                                <span class="custom-arrow-size-unit"></span>
                            </div>
                        </article>

                    </form>

                </article>

            </section>
        
        </div>

    </main>

    <%- include('../partials/footer'); %>

</body>
</html>