                        </ul> -->

                    </div>
                    <div class="logo">
                        <a href="/">
                            <img src="/img/designs/logo7.png" alt="Logo">
                        </a>
                    </div>
                    <div class="top-right-navbar">
                            <ul>
                                <% if (typeof session.category != 'undefined') { %>
                                    <% if (session.category == 'admin') { %>
                                    <li><a href="/products/create">
                                        <div class="user_button">
                                            Crear producto
                                        </div>
                                    <% } %>
                                <% } %>
                                <% if (typeof session.user_id != 'undefined') { %>
                                    <li><a href="/users/<%= session.user_id %>/profile" id="user-id">
                                        <div class="user_button">
                                            <%= session.first_name %>
                                            <%= session.last_name %>
                                        </div>
                                <% } else { %>  
                                    <li><a href="/users/login"><i class="fa-regular fa-user"></i></a></li>
                                <% } %>
                                <li><a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a></li>
                            </ul>
                    </div>
                </div>
            </div>
            <div class="bottom-navbar-container">
